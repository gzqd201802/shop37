<view class="tabs">
    <view class="tabs-title">
        <block wx:for="{{ tabs }}" wx:key="type">
            <view bindtap="changeTabs" 
            data-type="{{ item.type }}" 
            class="tabs-item {{ activeType === item.type ? 'active' : '' }}">
                {{ item.text }}
            </view>
        </block>
    </view>
    <view class="tab-content">
        <block wx:for="{{ orders }}" wx:key="order_id">
        <view class="order-item">
            <view class="order-item-row">
                <text>订单编号</text>
                <text>{{ item.order_number }}</text>
            </view>
            <view class="order-item-row">
                <text>订单价格</text>
                <text class="order-item-price">{{ item.order_price }}</text>
            </view>
            <view class="order-item-row">
                <text>订单日期</text>
                <text>1111</text>
            </view>
            <view class="order-item-row" wx:if="{{ item.pay_status === '0' }}">
                <button size="mini">支付</button>
            </view>
        </view>
        </block>
    </view>
</view>

/* pages/order/order.wxss */
.tabs {
  height: 80rpx;
  display: flex;
  border-bottom: 1rpx solid #ccc;
}
.tabs-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #666;
}
.tabs .active {
  color: red;
  position: relative;
}
.tabs .active::after {
  content: "";
  width: 100%;
  height: 2rpx;
  background-color: red;
  bottom: 0;
  left: 0;
  position: absolute;
}

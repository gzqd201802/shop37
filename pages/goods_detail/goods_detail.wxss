/* pages/goods_detail/goods_detail.wxss */
.slider-swiper{
  width: 750rpx;
  height: 750rpx;
  background-color: #f2f2f2;
}

.slider-swiper image{
  width: 750rpx;
  height: 750rpx;
}

.goods-content{
  font-size: 0;
  padding-bottom: 100rpx;
}

.fixed-bar{
  height: 98rpx;
  width: 100%;
  position: fixed;
  bottom:0;
  left:0;
  background-color: #fff;
  display: flex;
}

.bar-item{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  position: relative;
}
.bar-item button{
  position: absolute;
  left:0;
  top:0;
  width: 100%;
  height: 100%;
  background-color: pink;
  /* 透明度为0，让按钮看不到 */
  opacity: 0;
}

.bar-btn{
  width: 210rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f4b73f;
  color:#fff;
}

.bar-btn:last-child{
  background-color: #eb4450;
}